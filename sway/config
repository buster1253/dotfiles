set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $swaylock 'swaylock \
	--screenshot --effect-blur 7x5 --clock --indicator --indicator-radius 100 \
	--ring-color 8ec07c -f --datestr "%a, %d-%m-%Y" --font "Roboto Mono NerdFont normal" --fade-in 0.2'
#set $swaylock '/usr/bin/lock'

#xwayland enable

set $menu sway_rofi -show combi
set $term 'alacritty'

			            #border  │ bg       │  text   │  indicator │ child_border
